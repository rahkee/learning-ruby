<% if notice.present? %>
  <div class="sm-alert sm-alert-success">
    <div class="flex items-center justify-between gap-5">
      <div class="icon-container">
        <i class="fa-solid fa-check text-xl"></i>
      </div>
      <p class="flex-1"><%= notice %></p>
    </div>
  </div>
<% end %>

<header class="flex gap-5">
  <%= link_to authors_path, class: "sm-btn sm-btn-link" do %>
    <i class="fa-light fa-chevron-left"></i> Back to authors  
  <% end %>
</header>

<%= render @author %>

<div class="flex gap-5">
  <%= button_to @author, method: :delete, class: "sm-btn sm-btn-delete" do %>
    <i class="fa-light fa-trash-can"></i> Delete Author
  <% end %>

  <%= link_to edit_author_path(@author), class: "sm-btn sm-btn-outline" do %>
    <i class="fa-light fa-edit"></i> Edit Author
  <% end %>
</div>
