<div id="<%= dom_id article %>" class="flex flex-col gap-5 p-10 min-w-[480px] border rounded transition-all flex-1 hover:border-neutral-800 hover:shadow">

  <div class="flex flex-col gap-2.5">
    <h1><%= article.title %></h1>
    
    <p>
      by <strong><%= article.author.full_name %></strong> on <em><%= article.created_at.strftime("%B %d, %Y") %></em>
    </p>
  </div>

  <div class="flex flex-1">
    <p>
      <%= article.body %>
    </p>
  </div>

  <hr />

  <div class="flex justify-center">
    <%= link_to article, class: "sm-btn sm-btn-tertiary" do %>
      <i class="fa-light fa-newspaper"></i> View Article
    <% end %>
  </div>
</div>
